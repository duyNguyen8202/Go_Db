<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bookingIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking ID: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customerIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer ID: " />

    <TextView
        android:id="@+id/staffIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff ID: " />

    <TextView
        android:id="@+id/vehicleIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle ID: " />

    <TextView
        android:id="@+id/tourIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour ID: " />

    <TextView
        android:id="@+id/hotelIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel ID: " />

    <TextView
        android:id="@+id/bookingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Date: " />

    <TextView
        android:id="@+id/bookingTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Type: " />

</LinearLayout>