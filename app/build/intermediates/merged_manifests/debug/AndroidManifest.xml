<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ltdd_finalproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="30"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.INTERNET" />

    <queries>
        <provider
            android:name="com.android.car.ui.plugin.PluginNameProvider"
            android:authorities="com.android.car.ui.plugin" />
    </queries>

    <permission
        android:name="com.example.ltdd_finalproject.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.ltdd_finalproject.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="com.example.ltdd_finalproject.activity.TourDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.HotelDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.VehicleDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.AllHotelActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.AllVehicleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.AllTourActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.StaffActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.RegistInfoActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.RegisActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ltdd_finalproject.activity.IntroActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ltdd_finalproject.activity.HomeActivity"
            android:exported="false" />

        <provider
            android:name="com.android.car.ui.core.CarUiInstaller"
            android:authorities="com.example.ltdd_finalproject.CarUiInstaller"
            android:directBootAware="true"
            android:exported="false"
            android:process="@string/car_ui_installer_process_name" />
        <provider
            android:name="com.android.car.ui.core.SearchResultsProvider"
            android:authorities="com.example.ltdd_finalproject.SearchResultsProvider"
            android:exported="true"
            android:process="@string/car_ui_installer_process_name"
            android:readPermission="com.android.car.ui.READ_SEARCH_RESULTS" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.ltdd_finalproject.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>